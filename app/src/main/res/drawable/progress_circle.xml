<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="1000"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360" >

    <shape
        android:innerRadius="41dp"
        android:shape="ring"
        android:thickness="5dp"
        android:useLevel="false" >
        <size
            android:height="10dp"
            android:width="10dp" />

        <gradient
            android:centerColor="@color/white_80_percent"
            android:centerY="0.5"
            android:endColor="@color/white_15_percent"
            android:startColor="@color/tl_blue_80_percent"
            android:type="sweep"
            android:useLevel="false" />
    </shape>

</rotate>